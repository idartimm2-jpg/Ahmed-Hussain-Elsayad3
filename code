import { useState, useRef } from "react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Slider } from "@/components/ui/slider";
import { toast } from "sonner";
import { Mic, Upload, Send, AlertCircle } from "lucide-react";

/**
 * Design Philosophy: Luxurious Golden Egyptian Theme
 * - Gold primary color (#D4AF37) for premium feel
 * - Egyptian flag integration for national identity
 * - Clean white backgrounds with subtle borders
 * - Modern typography with Cairo font for contemporary look
 * - Prominent display of representative name: أحمد حسين الصياد
 */

export default function Home() {
  const [formData, setFormData] = useState({
    name: "",
    age: "",
    nationalId: "",
    governorate: "المنيا",
    district: "بندر المنيا",
    address: "",
    complaintText: "",
    voiceRecording: null as Blob | null,
    attachment: null as File | null,
  });

  const [isRecording, setIsRecording] = useState(false);
  const [recordingTime, setRecordingTime] = useState(0);
  const mediaRecorderRef = useRef<MediaRecorder | null>(null);
  const audioChunksRef = useRef<Blob[]>([]);
  const recordingIntervalRef = useRef<NodeJS.Timeout | null>(null);
  const fileInputRef = useRef<HTMLInputElement>(null);

  const districtOptions = {
    "المنيا": ["بندر المنيا", "مركز المنيا", "المنيا الجديدة"],
  };

  const handleStartRecording = async () => {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
      const mediaRecorder = new MediaRecorder(stream);
      mediaRecorderRef.current = mediaRecorder;
      audioChunksRef.current = [];

      mediaRecorder.ondataavailable = (event) => {
        audioChunksRef.current.push(event.data);
      };

      mediaRecorder.onstop = () => {
        const audioBlob = new Blob(audioChunksRef.current, { type: "audio/webm" });
        setFormData((prev) => ({ ...prev, voiceRecording: audioBlob }));
        stream.getTracks().forEach((track: MediaStreamTrack) => track.stop());
        toast.success("تم حفظ التسجيل الصوتي بنجاح");
      };

      mediaRecorder.start();
      setIsRecording(true);
      setRecordingTime(0);

      recordingIntervalRef.current = setInterval(() => {
        setRecordingTime((prev) => prev + 1);
      }, 1000);
    } catch (error) {
      toast.error("لم يتمكن من الوصول إلى الميكروفون");
    }
  };

  const handleStopRecording = () => {
    if (mediaRecorderRef.current) {
      mediaRecorderRef.current.stop();
      setIsRecording(false);
      if (recordingIntervalRef.current) {
        clearInterval(recordingIntervalRef.current);
      }
    }
  };

  const handleFileUpload = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (file) {
      if (file.size > 10 * 1024 * 1024) {
        toast.error("حجم الملف كبير جداً (الحد الأقصى 10 MB)");
        return;
      }
      setFormData((prev) => ({ ...prev, attachment: file }));
      toast.success(`تم تحميل الملف: ${file.name}`);
    }
  };

  const formatTime = (seconds: number) => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}:${secs.toString().padStart(2, "0")}`;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    // Validation
    if (!formData.name.trim()) {
      toast.error("الرجاء إدخال الاسم");
      return;
    }
    if (!formData.age || parseInt(formData.age) < 18) {
      toast.error("يجب أن تكون السن 18 سنة فما فوق");
      return;
    }
    if (!formData.nationalId.trim()) {
      toast.error("الرجاء إدخال الرقم القومي");
      return;
    }
    if (!formData.address.trim()) {
      toast.error("الرجاء إدخال العنوان التفصيلي");
      return;
    }
    if (!formData.complaintText.trim() && !formData.voiceRecording) {
      toast.error("الرجاء إدخال الشكوى أو تسجيل صوتي");
      return;
    }

    // Prepare message for WhatsApp
    let message = `*طلب/شكوى جديدة*\n\n`;
    message += `*الاسم:* ${formData.name}\n`;
    message += `*السن:* ${formData.age}\n`;
    message += `*الرقم القومي:* ${formData.nationalId}\n`;
    message += `*المحافظة:* ${formData.governorate}\n`;
    message += `*المنطقة:* ${formData.district}\n`;
    message += `*العنوان التفصيلي:* ${formData.address}\n`;
    if (formData.complaintText) {
      message += `*الشكوى/الطلب:* ${formData.complaintText}\n`;
    }
    if (formData.voiceRecording) {
      message += `*تسجيل صوتي:* مرفق\n`;
    }
    if (formData.attachment) {
      message += `*ملف مرفق:* ${formData.attachment.name}\n`;
    }

    // Encode message for WhatsApp
    const encodedMessage = encodeURIComponent(message);
    const whatsappUrl = `https://wa.me/201026465273?text=${encodedMessage}`;

    // Open WhatsApp
    window.open(whatsappUrl, "_blank");

    // Reset form
    setFormData({
      name: "",
      age: "",
      nationalId: "",
      governorate: "المنيا",
      district: "بندر المنيا",
      address: "",
      complaintText: "",
      voiceRecording: null,
      attachment: null,
    });
    setRecordingTime(0);

    toast.success("تم إرسال الطلب عبر WhatsApp بنجاح");
  };

  return (
    <div className="min-h-screen bg-white" dir="rtl">
      {/* Header */}
      <header className="bg-gradient-to-r from-[#D4AF37] to-[#C9A961] shadow-lg">
        <div className="container mx-auto px-4 py-8">
          <div className="flex items-center justify-center gap-4 mb-4">
            <img src="/images/egyptian-flag-gold.png" alt="علم مصر" className="h-16 w-24 object-cover rounded-lg shadow-md" />
          </div>
          <h1 className="text-5xl font-cairo font-bold text-white text-center mb-4">
            منصة تقديم الطلبات والشكاوى
          </h1>
          <p className="text-center text-white text-3xl font-bold font-cairo mb-3">
            السيد النائب
          </p>
          <p className="text-center text-white text-4xl font-bold font-cairo mb-4">
            أحمد حسين الصياد
          </p>
          <p className="text-center text-white/90 font-cairo text-lg">
            تقديم شكوى أو طلب
          </p>
        </div>
      </header>

      {/* Main Content */}
      <main className="container mx-auto px-4 py-12">
        <div className="max-w-2xl mx-auto">
          {/* Form Card */}
          <div className="bg-[#F8F7F3] rounded-lg shadow-lg border-2 border-[#E8E6E1] p-8">
            <form onSubmit={handleSubmit} className="space-y-6">
              {/* Name Field */}
              <div className="space-y-2">
                <Label htmlFor="name" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  الاسم الكامل *
                </Label>
                <Input
                  id="name"
                  type="text"
                  placeholder="أدخل اسمك الكامل"
                  value={formData.name}
                  onChange={(e) => setFormData({ ...formData, name: e.target.value })}
                  className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white"
                />
              </div>

              {/* Age and National ID */}
              <div className="grid grid-cols-2 gap-4">
                <div className="space-y-2">
                  <Label htmlFor="age" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                    السن *
                  </Label>
                  <Input
                    id="age"
                    type="number"
                    min="18"
                    placeholder="18"
                    value={formData.age}
                    onChange={(e) => setFormData({ ...formData, age: e.target.value })}
                    className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white"
                  />
                </div>
                <div className="space-y-2">
                  <Label htmlFor="nationalId" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                    الرقم القومي *
                  </Label>
                  <Input
                    id="nationalId"
                    type="text"
                    placeholder="رقم قومي"
                    value={formData.nationalId}
                    onChange={(e) => setFormData({ ...formData, nationalId: e.target.value })}
                    className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white"
                  />
                </div>
              </div>

              {/* Governorate */}
              <div className="space-y-2">
                <Label htmlFor="governorate" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  المحافظة *
                </Label>
                <Select value={formData.governorate} onValueChange={(value) => setFormData({ ...formData, governorate: value })}>
                  <SelectTrigger className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white">
                    <SelectValue />
                  </SelectTrigger>
                  <SelectContent>
                    <SelectItem value="المنيا">المنيا</SelectItem>
                  </SelectContent>
                </Select>
              </div>

              {/* District Slider */}
              <div className="space-y-4">
                <Label className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  المنطقة *
                </Label>
                <div className="bg-white border-2 border-[#E8E6E1] rounded-lg p-6">
                  <div className="mb-4">
                    <p className="text-lg font-cairo font-semibold text-[#D4AF37] text-center">
                      {formData.district}
                    </p>
                  </div>
                  <Slider
                    value={[districtOptions[formData.governorate as keyof typeof districtOptions].indexOf(formData.district)]}
                    onValueChange={(value) => {
                      const districts = districtOptions[formData.governorate as keyof typeof districtOptions];
                      setFormData({ ...formData, district: districts[value[0]] });
                    }}
                    min={0}
                    max={2}
                    step={1}
                    className="w-full"
                  />
                  <div className="flex justify-between mt-4 text-sm text-[#666666] font-cairo">
                    <span>بندر المنيا</span>
                    <span>مركز المنيا</span>
                    <span>المنيا الجديدة</span>
                  </div>
                </div>
              </div>

              {/* Detailed Address */}
              <div className="space-y-2">
                <Label htmlFor="address" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  العنوان التفصيلي *
                </Label>
                <Input
                  id="address"
                  type="text"
                  placeholder="الشارع والحي والمنطقة"
                  value={formData.address}
                  onChange={(e) => setFormData({ ...formData, address: e.target.value })}
                  className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white"
                />
              </div>

              {/* Complaint Text */}
              <div className="space-y-2">
                <Label htmlFor="complaint" className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  الشكوى أو الطلب
                </Label>
                <Textarea
                  id="complaint"
                  placeholder="اكتب شكواك أو طلبك هنا..."
                  value={formData.complaintText}
                  onChange={(e) => setFormData({ ...formData, complaintText: e.target.value })}
                  className="border-2 border-[#E8E6E1] focus:border-[#D4AF37] focus:ring-[#D4AF37] bg-white min-h-32"
                />
              </div>

              {/* Voice Recording */}
              <div className="space-y-2">
                <Label className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  تسجيل صوتي (اختياري)
                </Label>
                <div className="bg-white border-2 border-[#E8E6E1] rounded-lg p-4">
                  <div className="flex items-center gap-4">
                    {isRecording && (
                      <div className="flex items-center gap-2">
                        <div className="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
                        <span className="text-sm font-cairo text-[#666666]">{formatTime(recordingTime)}</span>
                      </div>
                    )}
                    {formData.voiceRecording && !isRecording && (
                      <span className="text-sm font-cairo text-green-600">✓ تم تسجيل الصوت</span>
                    )}
                    <Button
                      type="button"
                      onClick={isRecording ? handleStopRecording : handleStartRecording}
                      className={`flex items-center gap-2 ${
                        isRecording
                          ? "bg-red-500 hover:bg-red-600"
                          : "bg-[#D4AF37] hover:bg-[#C9A961]"
                      } text-white font-cairo`}
                    >
                      <Mic size={18} />
                      {isRecording ? "إيقاف التسجيل" : "بدء التسجيل"}
                    </Button>
                  </div>
                </div>
              </div>

              {/* File Upload */}
              <div className="space-y-2">
                <Label className="text-base font-cairo font-semibold text-[#1A1A1A]">
                  إرفاق ملف أو صورة (اختياري)
                </Label>
                <div className="bg-white border-2 border-dashed border-[#D4AF37] rounded-lg p-6">
                  <input
                    ref={fileInputRef}
                    type="file"
                    onChange={handleFileUpload}
                    className="hidden"
                    accept="image/*,.pdf,.doc,.docx"
                  />
                  <button
                    type="button"
                    onClick={() => fileInputRef.current?.click()}
                    className="w-full flex items-center justify-center gap-2 text-[#D4AF37] hover:text-[#C9A961] font-cairo font-semibold transition"
                  >
                    <Upload size={20} />
                    {formData.attachment ? `تم تحميل: ${formData.attachment.name}` : "اختر ملف"}
                  </button>
                </div>
              </div>

              {/* Submit Button */}
              <Button
                type="submit"
                className="w-full bg-gradient-to-r from-[#D4AF37] to-[#C9A961] hover:from-[#C9A961] hover:to-[#B8941E] text-white font-cairo font-bold text-lg py-6 rounded-lg shadow-lg transition transform hover:scale-105"
              >
                <Send size={20} className="ml-2" />
                إرسال الطلب عبر WhatsApp
              </Button>

              {/* Info Message */}
              <div className="bg-blue-50 border-l-4 border-[#D4AF37] p-4 rounded">
                <div className="flex gap-3">
                  <AlertCircle size={20} className="text-[#D4AF37] flex-shrink-0 mt-0.5" />
                  <p className="text-sm font-cairo text-[#1A1A1A]">
                    سيتم إرسال طلبك مباشرة إلى رقم WhatsApp +201026465273
                  </p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>

      {/* Footer */}
      <footer className="bg-gradient-to-r from-[#8B6914] to-[#6B5310] text-white mt-16">
        <div className="container mx-auto px-4 py-8">
          <div className="text-center">
            <p className="font-cairo text-lg mb-2">© جميع الحقوق محفوظة</p>
            <p className="font-cairo text-base">محمد علي</p>
            <p className="font-cairo text-base mt-2">01026465273</p>
          </div>
        </div>
      </footer>
    </div>
  );
}
